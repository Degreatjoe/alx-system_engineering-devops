#!/usr/bin/env bash
# Get listening ports
listening_ports=$(ss -tuln)

# Display headers
echo "Active Internet connections (only servers)"
echo "Proto Recv-Q Send-Q Local Address           Foreign Address         State       PID/Program name"

# Print listening ports along with PID and program name
echo "$listening_ports" | awk '$1 ~ /^(tcp|udp)$/ && $2 == "LISTEN" {print}'
